<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="15dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:padding="10dp">

        <TextView
            android:id="@+id/boleto_ruta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riobamba - Quito"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_marginRight="5sp"
            />

        <TextView
            android:id="@+id/boleto_nombre"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cristian Salgado"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_below="@id/boleto_ruta"/>
        <TextView
            android:id="@+id/boleto_autobus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Autobus N 45"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_below="@id/boleto_ruta"/>
        <TextView
            android:id="@+id/boleto_horario"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:text="12-01-2020-08:00"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_below="@id/boleto_nombre"/>
        <TextView
            android:id="@+id/boleto_lugares"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="5 lugares"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_below="@id/boleto_nombre"/>
    </RelativeLayout>




</androidx.cardview.widget.CardView>