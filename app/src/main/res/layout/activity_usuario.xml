<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioActivity">

        <TextView
            android:id="@+id/usuario_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATOS DE LA CUENTA"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_margin="18sp"
            />
        <TextView
            android:id="@+id/usuario_subtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos Personales"
            android:layout_below="@+id/usuario_titulo"
            android:gravity="start"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:layout_margin="12sp"
            />



        <EditText
            android:id="@+id/usuario_nombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/usuario_subtitulo"
            android:background="@drawable/edit_text_desing"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="12dp"
            android:hint="     Ingrese su nombre"
            android:textSize="17dp"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            />
        <EditText
            android:id="@+id/usuario_identificacion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/usuario_nombre"
            android:background="@drawable/edit_text_desing"
            android:hint="     Ingrese su numero de Cedula"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="12dp"
            android:textSize="17dp"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:maxLength="10"
            />

        <EditText
            android:id="@+id/usuario_telefono"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/usuario_identificacion"
            android:background="@drawable/edit_text_desing"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="12dp"
            android:hint="     Ingrese su numero de Telefono"
            android:textSize="17dp"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:maxLength="10"
            />
        <EditText
            android:id="@+id/usuario_correo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/usuario_telefono"
            android:background="@drawable/edit_text_desing"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="12dp"
            android:hint="     Ingrese su contraseÃ±a"
            android:textSize="17dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/usuario_subtitulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forma de Pago"
            android:layout_below="@+id/usuario_correo"
            android:gravity="start"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:layout_margin="12sp"
            />

        <TextView
            android:id="@+id/subtitulo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE EN LA TARJETA"
            android:layout_below="@+id/usuario_subtitulo2"
            android:gravity="start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/nombre_en_tarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtitulo3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Nombre en la tarjeta"
            android:backgroundTint="@color/colorAccent"
            android:inputType="textCapWords"
            />

        <TextView
            android:id="@+id/subtitulo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NUMERO DE TARJETA"
            android:layout_below="@+id/nombre_en_tarjeta"
            android:gravity="start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/numero_de_tarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtitulo4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="0000 0000 0000 0000"
            android:backgroundTint="@color/colorAccent"
            android:inputType="number"
            android:maxLength="16"
            />

        <TextView
            android:id="@+id/subtitulo5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FECHA DE CADUCIDAD"
            android:layout_below="@+id/numero_de_tarjeta"
            android:gravity="start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/fecha_caducidad_tarjeta"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtitulo5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="MM/AA"
            android:backgroundTint="@color/colorAccent"
            android:inputType="number"
            android:maxLength="4"
            />
        <TextView
            android:id="@+id/subtitulo6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CVC/CVV"
            android:layout_below="@+id/fecha_caducidad_tarjeta"
            android:gravity="start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/codigo_cvc__tarjeta"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/subtitulo6"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="123"
            android:backgroundTint="@color/colorAccent"
            android:inputType="number"
            android:maxLength="3"
            />

    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/codigo_cvc__tarjeta"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/colorAccent"
        android:text="GUARDAR"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"

        />

</RelativeLayout>

</ScrollView>